{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rebuild",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "command": ["snap remove --purge flutter &&",
                        "rm -rf /home/marcustomlinson/snap/flutter &&",
                        "lxc delete snapcraft-flutter --force &&",
                        "rm -f *.snap &&",
                        "snapcraft --use-lxd &&",
                        "snap install *.snap --classic --dangerous &&",
                        "flutter &&",
                        "cd /home/marcustomlinson/snap/flutter/common/flutter &&",
                        "git checkout master && git pull -r &&",
                        "which flutter"],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "base": "$gcc", "fileLocation": ["relative", "${workspaceFolder}/../out/host_debug_unopt"]
            }
        },
        {
            "label": "Build fifteenpuzzle",
            "type": "shell",
            "options": {
                "cwd": "/home/marcustomlinson/Projects/flutter/fifteenpuzzle",
            },
            "command": [// "rm -f /home/marcustomlinson/Projects/flutter/flutter/bin/cache/flutter_tools.snapshot &&",
                        "rm -rf ./linux && rm -rf ./build &&",
                        "flutter config --enable-linux-desktop &&",
                        "flutter pub get &&",
                        "flutter create ./ &&",
                        "flutter build linux --debug &&",
                        "which flutter"],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "base": "$gcc", "fileLocation": ["relative", "${workspaceFolder}/../out/host_debug_unopt"]
            }
        }
    ]
}
